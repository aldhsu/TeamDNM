<div id="signup">
      <h2>Sign Up</h2>
      <%= form_for @user do |f| %>
        <h2><%= f.label :username, "Username:" %>
        <%= f.text_field :username, :autofocus => true %>
        </h2>

        <h2><%= f.label :password, "Password:" %>
        <%= f.password_field :password %>
        </h2>

        <h2><%= f.label :password_confirmation, "Confirm Password:" %>
        <%= f.password_field :password_confirmation %>
        </h2>

        <%= f.submit %>
      <% end %>
    </div><!--/////// close signup //////-->